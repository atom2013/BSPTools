<?xml version="1.0"?>
<FamilyDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<CoreFramework>
		<CopyJobs>
			<CopyJob>
				<SourceFolder>$$BSPGEN:RULES_DIR$$\SystemInit</SourceFolder>
				<FilesToCopy>*</FilesToCopy>
				<ProjectInclusionMask>*</ProjectInclusionMask>
				<PreprocessorMacros>PART_$$SYS:MCU_ID$$</PreprocessorMacros>
			</CopyJob>
			<CopyJob>
				<SourceFolder>$$BSPGEN:INPUT_DIR$$\inc</SourceFolder>
				<TargetFolder>SDK\inc</TargetFolder>
				<AdditionalIncludeDirs>$$SYS:BSP_ROOT$$/SDK/</AdditionalIncludeDirs>
				<FilesToCopy>*</FilesToCopy>
				<ProjectInclusionMask>-tm4c*.h;-sc4c*.h;*</ProjectInclusionMask>
			</CopyJob>
			<CopyJob>
				<SourceFolder>$$BSPGEN:INPUT_DIR$$\driverlib</SourceFolder>
				<TargetFolder>SDK\driverlib</TargetFolder>
				<FilesToCopy>-rvmdk\*;-ccs\*;-ewarm\*;-*.ewp;-*.uvopt;-*.uvproj;*.h;*.c</FilesToCopy>
				<PreprocessorMacros>$$com.sysprogs.arm.ti.tiva.rev$$;gcc</PreprocessorMacros>
				<ProjectInclusionMask>-*onewire.c;*</ProjectInclusionMask>
			</CopyJob>
			<CopyJob>
				<SourceFolder>$$BSPGEN:INPUT_DIR$$\examples\peripherals</SourceFolder>
				<TargetFolder>SDK\examples\peripherals</TargetFolder>
				<FilesToCopy>*.h;*.c;*.txt</FilesToCopy>
				<ProjectInclusionMask>-*</ProjectInclusionMask>
			</CopyJob>
		</CopyJobs>
	</CoreFramework>
	<SmartSamples>
		<SmartSample>
			<SourceFolder>$$BSPGEN:RULES_DIR$$\Samples\LEDBlink</SourceFolder>
			<DestinationFolder>Samples\LEDBlink</DestinationFolder>
		</SmartSample>
	</SmartSamples>
</FamilyDefinition>
